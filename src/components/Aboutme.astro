<style>
.hero-img {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: all 0.35s ease-in-out;
}
.hero-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  overflow: hidden;
  animation: none;
}
.hero-img img {
  border-radius: 1000px;
  transition: all 0.35s ease-in-out;
}
.circulo {
  transition-property: transform;
  animation-name: rotate-center;
  animation-duration: 5.8s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
  transition: all 0.35s ease-in-out;
}
.circulo {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 5px #f9f871;
  color-scheme: light dark;
  border-radius: 50%;
  border-style: outset;
  overflow: hidden;
  transition: all 0.35s ease-in-out;
}
@keyframes rotate-center {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
@media screen and (max-width: 768px) {
  .hero-img {
    width: 250px;
    height: 250px;
  }

}
</style>